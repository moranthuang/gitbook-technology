{ 
	"title":"浮游问路", 
	"description": "一个程序员的自我修养", 
	"language": "zh-hans", 
	"author": "浮游问路",
	"links":{
		 "sidebar": {         
                    "浮游问路的博客":"https://moranthuang.com",
                    "GitHub": "https://github.com/moranthuang",
                    "知乎":"https://www.zhihu.com/people/moranthuang"
	      }
	},
	"plugins":[
		"back-to-top-button", 
		"splitter",
		"expandable-chapters-small",
		"-sharing",
		"search-pro",
    "copy-code-button",
    "tbfed-pagefooter",
    "expandable-chapters",
    "prism",
    "advanced-emoji",
    "lightbox",
    "lightbox",
    "favicon",
    "anchor-navigation-ex",
    "pageview-count",
     "prism",
     "-highlight"
	],

	"pluginsConfig": {
	    "theme-default": {
	        "showLevel": false
	    },
	    "tbfed-pagefooter": {
            "copyright": "Copyright (c) 2021 moranthuang.",
            "modify_label": "time：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
      },
      "favicon": {
         "shortcut": "image/favicon.ico",
         "bookmark": "image/favicon.ico",
         "appleTouch": "image/favicon.ico",
         "appleTouchMore": {
             "120x120": "image/favicon.ico",
             "180x180": "image/favicon.ico"
         }
     },
     "anchor-navigation-ex": {
         "showLevel": false, 
         "showGoTop": false
     },
     "prism": {
            "css": [
                "prismjs/themes/prism-tomorrow.css"
            ],
            "lang": {
                "flow": "typescript"
            },
            "ignore": [
                "mermaid",
                "eval-js"
            ]
     }
	},

	"pdf":{
		"chapterMark":"pagebreak",
		"fontFamily":"Arial",
		"fontSize":16,
		"margin":{"bottom":56,"left":62,"right":62,"top":56},
		"pageBreaksBefore":"/",
		"pageNumbers":true,
		"paperSize":"a4"
	}
}
